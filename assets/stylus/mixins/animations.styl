$transition-time = 350ms
$transition-style = cubic-bezier(.17, .04, .03, 1)

anim($time = $transition-time, $style = $transition-style)
  transition $time $style

anim-all($time = $transition-time)
  transition all $time $transition-style

anim-opacity($time = $transition-time)
  transition opacity $time $transition-style

anim-none()
  transition none
